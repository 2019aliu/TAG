<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CloseRangeActivity"
    tools:showIn="@layout/activity_close_range">

    <LinearLayout
        android:id="@+id/powerCircle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="144dp"
        android:background="@drawable/circle"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="@string/closerange_cold"
            android:textColor="@color/offwhite"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginTop="@android:dimen/notification_large_icon_height"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/powerCircle">

        <ImageButton
            android:id="@+id/flashlight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:backgroundTint="#45BFB7"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/flashlight" />

        <ImageButton
            android:id="@+id/vibration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="36dp"
            android:layout_weight="1"
            android:backgroundTint="#45BFB7"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/phone_vibrating" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>